<Window x:Class="WpfOrder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfOrder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Background="Azure">
            <StackPanel Orientation="Horizontal">
                <Label>Enter the Order Name</Label>
                <TextBox Background="Turquoise" Width="100" Margin="20,0,0,0" Name="OrderName"></TextBox>
                <Button Margin="10,0,0,0" Background="GreenYellow" Click="Button_Click">Click here</Button>
               
            </StackPanel>
            <TextBlock Name="status" Background="Aqua" Width="200" Margin="100" Height="50"></TextBlock>

       
        </StackPanel>
    </Grid>
</Window>
